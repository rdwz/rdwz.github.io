---
import Layout from '~/layouts/Layout.astro'
import Header from '~/components/Header.astro'
import Links from '~/components/Links.astro'
import Footer from '~/components/Footer.astro'
---

<Layout>
	<main>
		<div>
			<Header />
			<Links />
			<Footer />
		</div>
	</main>
</Layout>

<style>
	main {
		display: grid;
		min-height: 100vh;
		place-items: center;
		padding-bottom: var(--size-5);
	}
</style>
